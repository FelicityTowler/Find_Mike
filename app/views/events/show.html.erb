<div class="header" style="background-image: url(<%= image_url("brick-wall.png") %>)">
  <h1 class="header-text"><%= @event.name %></h1>
</div>
<div class="container">
  <% if @event.photo.attached? %>
    <div class="event-image" style="background-image: url(<%= cl_image_path(@event.venue.photo.key) %>)">
      <% if @event.cancelled == true %>
        <h2>CANCELLED</h2>
      <% end %>
    </div>
  <% end %>
  <div class="event_details_card">
    <div class="d-flex">
      <div class="event_details_card_box">
        <div>
          <i class="far fa-calendar-alt"></i>
        </div>
        <div>
          <%= @event.date.strftime("%A #{@event.date.day.ordinalize} %B") %>
        </div>
      </div>
      <div class="event_details_card_box">
        <div><i class="far fa-clock"></i></div>
        <div> <%= @event.time.strftime("%-l%P") %></div>
      </div>
    </div>
    <div class="d-flex">
      <div class="event_details_card_box">
        <div><%= image_tag"Microphone.svg", id:'microphone_icon' %></div>
        <div>5 minutes slot</div>
      </div>
      <div class="event_details_card_box">
        <div><i class="fas fa-user-friends"></i></div>
        <div>
          <% if @event.bringer %>
            bringer
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<div class ="event_bio">
  "<%= @event.name %> is the hottest open mic event in London. Each week, unwitting amatuers try to entertain the audience and last until the sound of the gong.
</div>
<div>
  <div class="Booking_slot">
    <div>
      <%= @event.available_spots%>available slots
    </div>
    <% if @event.venue == current_user.venues.first %>
      <h3>
        <%= link_to 'Edit Event', edit_event_path(@event) %><br>
        <%= link_to 'Cancel Event', cancel_event_path(@event), method: :patch %><br>
      </h3>
      <h2>Requested Bookings</h2>
      <% @event.bookings.each do |booking| %>
        <% if booking.approved %>
          APPROVED
        <% end %>
        <%= booking.user.first_name %> <%= booking.user.last_name %> <%= booking.user.email %>
        <% if booking.approved %>
          Booked!
        <% else %>
          <%= link_to "Approve Booking", event_booking_approve_path(@event, booking), method: :patch %>
        <% end %>
      <% end %>
    <% end %>
    <% if Booking.where(["user_id = ? and event_id = ?", current_user, params[:id]]).empty? %>
      <%= simple_form_for([@event, @booking]) do |f| %>
        <%= f.submit %>
      <% end %>
    <% else %>
      <p>You are already booked on to this event</p>
      <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, event_booking_path(@event, @booking),
          method: :delete, data: { confirm: "Delete your booking for #{@event.name}?" } %>
    <% end %>
  </div>
</div>



<div class="performers_carousel"></div>




<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<div class="card col-4">
  <% if @event.cancelled == true %>
    <h2>CANCELLED</h2>
  <% end %>
</div>

