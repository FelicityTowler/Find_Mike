<%= simple_form_for @event do |f| %>
<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :time, as: :time %>
  <%= f.input :date, as: :date %>
  <%= f.input :bringer, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.input :information, as: :text %>
  <%= f.input :total_spots %>
</div>
<div class="form-actions">
  <%= f.button :submit, "Create Your Event", class: "btn-login" %>
</div>
<% end %>
