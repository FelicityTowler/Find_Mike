<% if @events.blank? %>
  There are no events on this date.
<% else %>
  <ul>
    <% @events.each do |event| %>
      <li>
        <%= link_to event.name,  event_path(event)%>
      </li>
    <% end %>
  </ul>
<% end %>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>